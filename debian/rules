#!/usr/bin/make -f

%:
	dh $@ --with python2 --buildsystem=python_distutils

override_dh_auto_install:
	python setup.py install --root=debian/python-massive-passive --install-layout=deb 
	rm -rf -- debian/python-massive-passive/usr/sbin
	rm -f -- debian/python-massive-passive/usr/share/python-massive-passive/*.txt
	rm -rf -- debian/python-massive-passive/etc
override_dh_auto_build:

override_dh_python2:
	dh_python2 -V 2.7-

